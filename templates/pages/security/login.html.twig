{% extends 'base.html.twig' %}

{% block title %}OSCEALE - Connexion
{% endblock %}

{% block body %}

	<section class="curved container-fluid d-flex justify-content-center align-items-center">
		<img src="{{ asset('assets/img/osceale-logo.png') }}" alt="">
	</section>

	<div class="container pt-4 pb-4 ">
		<div class="row">
			<div class="col-12 d-flex flex-column align-items-center ">
				<h1 class="mt4">Se connecter</h1>
				<p style='font-size:15px'>Et profite de quelques fonctionnalités supplémentaires</p>
			</div>
		</div>
	</div>
	<div class="container form_connexion p-4 mb-5">


		{% for message in app.flashes('success') %}
			<div class='alert alert-success mt-4'>
				{{ message }}
			</div>
		{% endfor %}

		{% if error %}
			<div class="alert alert-danger">
				{{ error.message|trans(error.messageData, 'security') }}
			</div>

		{% endif %}

		<form action="{{ path('app_security') }}" method='post'>
			<div class="form-group">
				<label for="username" class="form-label mt-4 ">Adresse email</label>
				<input type="email" class="form-control" id="username" placeholder="exemple@osceale.fr" name='_username' value='{{ last_username }}'>
			</div>
			<div class="form-group">
				<label for="password" class="form-label mt-4">Mot de passe</label>
				<input type="password" class="form-control" id="password" name='_password' placeholder="*********">
			</div>
			<div class="div_button_connexion d-flex justify-content-end mb-2">
				<button class="btn-btn-primary mt-4  mb-4 btn_connexion">
					Se connecter
				</button>
			</div>
		</form>
	</div>
{% endblock %}
